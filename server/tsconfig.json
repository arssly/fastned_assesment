{
    "compilerOptions": {
      "baseUrl": "./",
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
    },
    "include": [
        "./**/*",
        "./index.ts", 
        ".eslintrc.js"
    ]
}